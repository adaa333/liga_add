package schema;

/**
 * Esta clase representa a un deportista en la liga, se genera la tabla deportista en la BDD
 * */

import java.util.concurrent.atomic.AtomicInteger;

import jakarta.persistence.Column;
import jakarta.persistence.Id;
import jakarta.persistence.OneToOne;
import jakarta.persistence.PrimaryKeyJoinColumn;
import jakarta.persistence.Table;

@Table (name="sportsmen")
public class Deportista {
	static AtomicInteger contadorID= new AtomicInteger(001);
	@Column (name="sportsman_id")
	@Id
	private int id;
	private String nombre;
	private int edad;
	private String nacionalidad;
	@Column (name="current_team_number")
	@OneToOne
	@PrimaryKeyJoinColumn
	private String equipoActual;
	@Column (name="current_position")
	private String posicionEnEquipoActual;
	
//getters
	public int getId() {
		return id;
	}
	public String getNombre() {
		return nombre;
	}
	public int getEdad() {
		return edad;
	}
	public String getNacionalidad() {
		return nacionalidad;
	}
	public String getEquipoActual() {
		return equipoActual;
	}
	
	public Deportista(String nombre, int edad, String nacionalidad, String equipoActual) {
		this.id= contadorID.getAndIncrement();
		this.nombre=nombre;
		this.edad=edad;
		this.nacionalidad=nacionalidad;
		this.equipoActual=equipoActual;
	}
}
